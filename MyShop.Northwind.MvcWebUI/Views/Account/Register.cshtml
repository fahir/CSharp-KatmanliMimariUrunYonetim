@model MyShop.Northwind.MvcWebUI.UserAddOrUpdateViewModel

@{
    ViewBag.Title = "Register";
    Layout = null;
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<meta name="viewport" content="width=device-width" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
            <h2>Register Form</h2>
        </div>
        <div class="row">
            <div class="col-md-12 order-md-1">
                @using (Html.BeginForm("", ""))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-5 mb-3">
                            <label for="userName">User Name</label>
                            @Html.TextBoxFor(p => p.User.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-5 mb-3">
                            <label for="unitPrice">Password</label>
                            @Html.PasswordFor(p => p.User.Hashword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.User.Hashword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10 mb-3">
                            <label for="qunatityPerUnit">Email</label>
                            @Html.TextBoxFor(p => p.User.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.User.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 mb-3">
                            <label for="FirstName">First Name</label>
                            @Html.TextBoxFor(p => p.User.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.User.FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-5 mb-3">
                            <label for="unitPrice">Last Name</label>
                            @Html.TextBoxFor(p => p.User.LastName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.User.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" formmethod="post" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>


