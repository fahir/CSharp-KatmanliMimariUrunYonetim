@model MyShop.Northwind.MvcWebUI.Models.CartViewModel
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Checkout</h2>
@using (Html.BeginForm("Checkout", "Cart"))
{
    <div class="form-group">
        <label>Full Name</label>
        @Html.TextBoxFor(m => m.ShippingDetail.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ShippingDetail.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(m => m.ShippingDetail.Address1, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ShippingDetail.Address1, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Address -2</label>
        @Html.TextBoxFor(m => m.ShippingDetail.Address2, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ShippingDetail.Address2, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>City</label>
        @Html.TextBoxFor(m => m.ShippingDetail.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ShippingDetail.City, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Country</label>
        @Html.TextBoxFor(m => m.ShippingDetail.Country, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ShippingDetail.Country, "", new { @class = "text-danger" })
    </div>
    <div class="form-check">
        <span><b>Is Gift:</b> </span> @Html.CheckBoxFor(m => m.ShippingDetail.IsGift, new { @class = "form-contro" })
    </div>
    <input type="submit" class="btn-success" name="name" value="Complete Checkout" />
}